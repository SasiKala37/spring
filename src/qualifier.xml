<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<bean id="productBean" class="com.bridgelabz.autowiring.Product" >
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="Ice cream"></constructor-arg>
		<constructor-arg value="50"></constructor-arg>
	</bean>
	<bean id="productBean1" class="com.bridgelabz.autowiring.Product" >
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="vadapav"></constructor-arg>
		<constructor-arg value="50"></constructor-arg>
	</bean>
	<bean id="customerBean"  class="com.bridgelabz.autowiring.Customer" >
	<property name="customerName" value="Mamta"></property>
	</bean>
</beans>